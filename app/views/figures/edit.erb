<h1> Edit a Figure </h1>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label> Name </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"><br></br>

  <label> <h4>Titles </h4></label>
  <% Title.all.each do |title|%>
  <label> <%=title.name%></label>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
    <%end%>

    <label> <h4>Add New Title </h4></label>
    <input type="text" id="new_title" name="title[name]">

  <label> <h4>Landmarks </h4></label>
  <% Landmark.all.each do |landmark|%>
  <label> <%=landmark.name%></label>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>>
    <%end%>

    <label>Add New Landmark:</label>
    <input type="text" id="new_landmark" name="landmark[name]">


  <input type="submit" value="Edit Figure">
</form>
